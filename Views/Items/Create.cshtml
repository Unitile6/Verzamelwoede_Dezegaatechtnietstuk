@using Verzamelwoede_NonBroken.Models;
@model Verzamelwoede_NonBroken.Models.Item

@{
    ViewData["Title"] = "Create";
    var filters = ViewData["Filters"] as List<Filter>;
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Imageurl" class="control-label"></label>
                <input asp-for="Imageurl" class="form-control" type="file" name="Image" enctype="multipart/form-data" />
                <span asp-validation-for="Imageurl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsesPerYear" class="control-label"></label>
                <input asp-for="UsesPerYear" class="form-control" />
                <span asp-validation-for="UsesPerYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Filters" class="form-select">
                </select>
                @foreach (var filter in filters)
                {
                    <label>
                        <input type="checkbox" name="Filters.SelectedCategories" value="@filter" />
                        @filter
                    </label>

                    <br />
                }
                @*
                <label asp-for="filters" class="control-label"></label>
                <select asp-for="filters" class="form-control" asp-items="ViewBag.Filters"></select>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

